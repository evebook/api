{
  "name": "eve-book-api",
  "version": "0.1.0",
  "description": "EVE Book API",
  "private": true,
  "license": "GPL-3.0",
  "scripts": {
    "start:killmails": "nodemon --watch src --ext ts --ignore 'src/**/*.spec.ts' --exec ts-node ./src/killmails.ts",
    "start:updater": "nodemon --watch src --ext ts --ignore 'src/**/*.spec.ts' --exec ts-node ./src/updater.ts",
    "start": "nodemon",
    "seed": "node seed",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "build": "tsc",
    "prod": "node dist/api.js",
    "prod:killmails": "node dist/killmails.js",
    "prod:updater": "node dist/updater.js",
    "heroku-postbuild": "npm run build",
    "test": "nyc --require ts-node/register mocha src/**/*.spec.ts --reporter spec",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/",
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "@nestjs/common": "^5.0.1",
    "@nestjs/core": "^5.0.1",
    "@nestjs/cqrs": "^5.0.1",
    "@nestjs/microservices": "^5.0.1",
    "@nestjs/swagger": "^2.0.2",
    "@nestjs/testing": "^5.0.1",
    "@nestjs/typeorm": "^5.0.0",
    "@nestjs/websockets": "^5.0.1",
    "@types/bluebird": "^3.5.20",
    "@types/hashids": "^1.0.30",
    "@types/ioredis": "0.0.25",
    "@types/node": "^8.0.33",
    "@types/winston": "^2.3.6",
    "@types/ws": "^4.0.0",
    "axios": "^0.17.0",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "class-sanitizer": "^0.0.5",
    "class-transformer": "^0.1.8",
    "class-validator": "^0.7.1",
    "cors": "^2.8.3",
    "dotenv": "^4.0.0",
    "hashids": "^1.1.4",
    "ioredis": "^3.1.1",
    "moment": "^2.18.1",
    "pg": "^7.0.0",
    "pg-query-stream": "^1.1.1",
    "redis": "^2.7.1",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "rxjs-compat": "^6.0.0",
    "typeorm": "0.2.7",
    "typescript": "^2.9.1",
    "winston": "^2.4.0",
    "ws": "^4.0.0",
    "zone.js": "^0.8.18",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/faker": "^4.1.0",
    "@types/mocha": "^2.2.41",
    "@types/socket.io": "^1.4.34",
    "chai": "^4.0.2",
    "coveralls": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "faker": "^4.1.0",
    "mocha": "^4.0.0",
    "nyc": "^11.0.2",
    "supertest": "^3.0.0",
    "ts-node": "^6.1.0",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
